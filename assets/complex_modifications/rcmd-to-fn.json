{
    "title": "RCmd を Fn として使う",
    "rules": [
        {
            "description": "RCmd + hjkl -> Cursor",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "h", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "left_arrow" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "j", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "down_arrow" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "k", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "up_arrow" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "l", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "right_arrow" } ]
                }
            ]
        },
        {
            "description": "RCmd + io -> PageUp/PageDn",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "i", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "page_up" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "o", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "page_down" } ]
                }
            ]
        },
        {
            "description": "RCmd + comma/period -> Home/End",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "comma", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "home" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "period", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "end" } ]
                }
            ]
        },
        {
            "description": "RCmd + m -> DeleteForward",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "m", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "delete_or_backspace" } ]
                }
            ]
        },
        {
            "description": "RCmd + A/W/S/E/D/R/F/T/G/Z/X/C/V/B/N -> アプリケーション・ランチャ",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "a", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "open -a 'finder'" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "w", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-w" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "s", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-s" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "e", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-e" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "d", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
