                    "to": [ { "shell_command": "~/.config/karabiner/app/do-z" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "x", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-x" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "c", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-c" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "v", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-v" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "b", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-b" } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "n", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "shell_command": "~/.config/karabiner/app/do-n" } ]
                }
            ]
        },
        {
            "description": "RCmd + 1234567890 -> Functions",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "1", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
                    "to": [ { "key_code": "f1" } ]
                },
                {
