{
    "title": "CapsLock 関連",
    "rules": [
        {
            "description": "Change caps_lock to command+control+option.",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "modifiers": [
                                "left_command",
                                "left_option"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
