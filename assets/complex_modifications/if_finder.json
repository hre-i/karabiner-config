{
    "title": "アプリ依存設定",
    "rules": [
        {
            "description": "Fn + Ctrl + I/O -> Shift+Control+Tab/Control+Tab for Finder, Skim",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "com\\.apple\\.finder" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "x", "modifiers": { "mandatory": [ "fn" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control" ] } ]
                },
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "com\\.apple\\.finder" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "x", "modifiers": { "mandatory": [ "fn" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control" ] } ]
                },
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "net\\.sourceforge\\.skim-app\\.skim" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "x", "modifiers": { "mandatory": [ "fn" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control" ] } ]
                },
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [ "net\\.sourceforge\\.skim-app\\.skim" ]
                        }
                    ],
                    "type": "basic",
                    "from": { "key_code": "z", "modifiers": { "mandatory": [ "fn" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "control", "shift" ] } ]
                }
            ]
        }
    ]
}
