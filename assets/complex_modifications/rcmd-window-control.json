{
    "title": "RCmd ウィンドウ操作関連",
    "rules": [
        {
            "description": "RCmd + M -> ウインドウを隠す(command m -> command h)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "m", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "h", "modifiers": [ "command" ] } ]
                }
            ]
        },
        {
            "description": "RCmd + J -> command+tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "j", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "command" ] } ]
                }
            ]
        },
        {
            "description": "RCmd + K -> command+shift+tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "k", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "command", "shift" ] } ]
                }
            ]
        },
        {
            "description": "RCmd + J -> opt+tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "j", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "option" ] } ]
                }
            ]
        },
        {
            "description": "RCmd + K -> opt+shift+tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "j", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "tab", "modifiers": [ "option", "shift" ] } ]
                }
            ]
        },
        {
            "description": "RCmd + J/K -> ウインドウ切り替え(control+f4/control+shift+f4)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "j", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "f4", "modifiers": [ "control" ] } ]
                },
                {
                    "type": "basic",
                    "from": { "key_code": "k", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "f4", "modifiers": [ "control", "shift" ] } ]
                }
            ]
        },
        {
            "description": "RCmd + L -> アプリウインドウ切り替え(command+`)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "l", "modifiers": { "mandatory": [ "right_command" ] } },
                    "to": [ { "key_code": "grave_accent_and_tilde", "modifiers": [ "command" ] } ]
                }
            ]
        }
    ]
}
